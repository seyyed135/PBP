<!DOCTYPE html>
<html lang="fa" dir="rtl">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - دفتر تلفن</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/css/rtlTheme.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/PhoneBookProject.styles.css" asp-append-version="true" />
    <!-- sweetalert -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/sweetalert2@11.4.25/dist/sweetalert2.min.css" />
    <!-- persian-datepicker -->
    <link rel="stylesheet" href="https://babakhani.github.io/PersianWebToolkit/beta/lib/persian-datepicker/dist/css/persian-datepicker.css" />
    <!-- bootstrap-icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg bg-primary" data-bs-theme="dark">
            <div class="container-fluid">
                <a class="navbar-brand text-dark" asp-controller="Contacts" asp-action="Index">دفتر تلفن</a>
                <div class="collapse navbar-collapse" id="navbarColor01">
                    <ul class="navbar-nav me-auto">
                        <li class="nav-item">
                            <a class="nav-link active" asp-controller="Contacts" asp-action="Index">
                                لیست مخاطبین
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link active" asp-controller="Contacts" asp-action="Gallery">
                                گالری تصاویر مخاطبین
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link active" asp-controller="Contacts" asp-action="Create">
                                ایجاد مخاطب جدید
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link active" asp-controller="ActivityLogUsers" asp-action="Index">
                                فعالیت کاربران
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link active" asp-controller="DynamicLists" asp-action="Index">
                                لیست‌های پویا
                            </a>
                        </li>
                        @if (User.IsInRole("Admin"))
                        {
                            <li class="nav-item">
                                <a class="nav-link active" asp-controller="DynamicLists" asp-action="Create">
                                    افزودن به لیست‌ پویا
                                </a>
                            </li>
                        }
                    </ul>

                    <ul class="navbar-nav ms-auto">
                        <li class="nav-item">
                            @if (User.Identity!.IsAuthenticated)
                            {
                                var user = await UserManager.GetUserAsync(User);
                                var roles = await UserManager.GetRolesAsync(user!);
                                <span class="nav-link active">نقش شما : @string.Join(", ", roles)</span>
                            }
                        </li>
                        <li class="nav-item">
                            <a class="nav-link active" asp-controller="Accounts" asp-action="Logout">
                                خروج از سیستم
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; دفتر تلفن - <a>حریم خصوصی</a>
        </div>
    </footer>
    <script src="https://code.jquery.com/jquery-2.2.4.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <!-- sweetalert -->
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11.4.25/dist/sweetalert2.all.min.js"></script>
    <!-- persian-datepicker -->
    <script src="https://babakhani.github.io/PersianWebToolkit/beta/lib/persian-date/dist/persian-date.js"></script>
    <script src="https://babakhani.github.io/PersianWebToolkit/beta/lib/persian-datepicker/dist/js/persian-datepicker.js"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>